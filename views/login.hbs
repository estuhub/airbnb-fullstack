<div class="row login-body justify-content-center align-items-center">
	<!-- wrap everything in a row-col so it can be align -->
	<div class="col-4">
		<!-- card -->
		<div class="card">
			<div class="row">
				<!-- logo -->
				<div class="col-12 text-center">
					<div class="pt-5">
						<a href="#"
							><img
								class="logo"
								src="../images/logo-airbnb.png"
								alt="airbnb-logo"
						/></a>
					</div>
				</div>
				<!-- card body -->
				<div class="col-12">
					<div class="card-body">
						<!-- inputs -->
						<form action="/auth/login" method="POST">
							<!-- email -->
							<div class="mb-3">
								<label class="form-label mb-0">Email</label>
								<input name="email" type="email" class="form-control" />
							</div>
							<!-- password -->
							<div class="mb-3">
								<label class="form-label mb-0">Password</label>
								<input name="password" type="password" class="form-control" />
							</div>
							<!-- button -->
							<div class="pb-3">
								<button class="btn btn-success">Login</button>
							</div>
							<!-- phrase -->
							<div>
								<p>
									New to Airbnb? <a href="#" class="text-success">Signup</a>
								</p>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
