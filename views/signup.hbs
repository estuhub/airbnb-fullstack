<div class="row signup-body justify-content-center align-items-center">
	<!-- wrap everything in a row-col so it can be align -->
	<div class="col-4">
		<!-- card -->
		<div class="card">
			<!-- logo -->
			<div class="col pt-5 text-center">
				<img
					class="card-img-top logo"
					src="../images/logo-airbnb.png"
					alt="airbnb-logo"
				/>
			</div>
			<div class="card-body">
				<!-- inputs -->
				<form action="/auth/signup" method="POST">
					<!-- name -->
					<div class="mb-3">
						<label class="form-label mb-0">Your Full Name</label>
						<input name="name" type="text" class="form-control" />
					</div>
					<!-- profile pic -->
					<div class="mb-3">
						<label class="form-label mb-0">Profile Picture</label>
						<input
							name="avatar"
							type="text"
							class="form-control"
							placeholder="https//..."
						/>
					</div>
					<!-- email -->
					<div class="mb-3">
						<label class="form-label mb-0">Email</label>
						<input name="email" type="email" class="form-control" />
					</div>
					<!-- password -->
					<div class="mb-3">
						<label class="form-label mb-0">Password</label>
						<input name="password" type="password" class="form-control" />
					</div>
					<!-- button -->
					<div class="pb-3">
						<button class="btn btn-success">Signup</button>
					</div>
					<!-- phrase -->
					<div>
						<p>
							Already have an account?
							<a href="#" class="text-success">Login</a>
						</p>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
