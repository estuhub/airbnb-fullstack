<!-- col1: Profile & col2: Listing -->
<div class="container">
	<div class="row">
		<!-- Profile -->
		<div class="col-5">
			<div class="row">
				<!-- Profile title -->
				<div class="col-10">
					<p class="h2">Profile</p>
				</div>
				<!-- Profile inputs form -->
				<div class="col-10 border-top border-grey">
					<form action="/profile?_method=PATCH" method="POST">
						<!-- Profile form input -->
						<!-- Name -->
						<div class="my-3">
							<label class="form-label mb-0">Name</label>
							<input
								name="name"
								type="text"
								class="form-control"
								value="{{ user.name }}"
							/>
						</div>
						<!-- Email -->
						<div class="mb-3">
							<label class="form-label mb-0">Email</label>
							<input
								name="email"
								type="email"
								class="form-control"
								value="{{ user.email }}"
							/>
						</div>
						<!-- Profile Pic -->
						<div class="mb-3">
							<label class="form-label">Profile Picture</label>
							<div class="host">
								<img
									src="{{ user.avatar }}"
									alt="profile-picture"
									class="mb-3"
								/>
							</div>
							<input
								name="avatar"
								value="{{ user.avatar }}"
								type="url"
								class="form-control"
							/>
						</div>
						<button class="btn btn-success">Save Changes</button>
					</form>
				</div>
			</div>
		</div>
		<!-- Listing -->
		<div class="col-7">
			<div class="row">
				<!-- Listing title -->
				<div class="col-12 border-bottom border-grey mb-3">
